										<fx:Array>
											<fx:Object id="zoom_in" icon="@Embed(source='oitt_images/zoom_in.png')"/>
											<fx:Object id="zoom_out" icon="@Embed(source='oitt_images/zoom_out.png')"/>
											<fx:Object id="pan" icon="@Embed(source='oitt_images/pan.png')"/>
										</fx:Array>
									</mx:dataProvider>
								</mx:ToggleButtonBar>
								
								<mx:Button click="navTool.zoomToPrevExtent()"
										   enabled="{!navTool.isFirstExtent}"
