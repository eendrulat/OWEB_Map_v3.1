						    <mx:Text text="OWEB Investment Tracking Tool" fontWeight="bold" fontSize="20" fontFamily="Verdana" paddingLeft="5" click="popupBox.visible=true; popupBox.includeInLayout=true" rollOverEffect="{glow}" rollOutEffect="{unglow}"/>
						    <mx:HBox width="100%" horizontalAlign="right">
						    	
