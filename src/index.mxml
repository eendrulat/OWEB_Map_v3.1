<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:esri="http://www.esri.com/2008/ags"
			   xmlns:ext="com.ext.*" 
			   xmlns:text="flash.text.*"
			   pageTitle="OWEB Investment Tracking Tool" height="100%">
	
	<fx:Style source="/style/Styles.css"/>
	
<fx:Script source="owebMap.as"/>

<!-- Start Declarations -->
<fx:Declarations>
	<!-- Here are some bells & whistles -->
	<mx:DateFormatter id="dateFormatter" formatString="MMM D, YYYY"/>

	<!-- Text mouseover effects -->
	<mx:Glow  id="glow" alphaFrom="0" alphaTo="1"
			  blurXFrom="0.0" blurXTo="5.0"
			  blurYFrom="0.0" blurYTo="5.0"  strength="2"
			  color="0xCC0000"/>
	<mx:Glow id="unglow" duration="800"  
			 alphaFrom="1" alphaTo="0"
			 blurXFrom="5.0" blurXTo="0.0"
			 blurYFrom="5.0" blurYTo="0.0"  strength="2"
			 color="0xCC0000" />
    
	<s:Fade id="fadeEffect" target="{screenPanel}" duration="750" alphaFrom="1" alphaTo="0"/>
    
	
	<!-- Query Task: display all project locations-->
    <esri:QueryTask
        id="queryTaskProjects"
        url="http://navigator.state.or.us/ArcGIS/rest/services/Projects/OWEB/MapServer/0"
		useAMF="false"/>
	
    <esri:Query
        id="queryProjects"
        returnGeometry="true"
        outFields='*'
        outSpatialReference="{map.spatialReference}"/>
        
    <esri:SimpleMarkerSymbol id="projAcquisition" size="10" color="0x84306b" style="circle" alpha="{alpha_LyrProjType.value}">
    	 <esri:SimpleLineSymbol color="0x000000" width="1"/>
    </esri:SimpleMarkerSymbol>
    <esri:SimpleMarkerSymbol id="projAssessment" size="10" color="0x52f78c" style="circle" alpha="{alpha_LyrProjType.value}">
    	 <esri:SimpleLineSymbol color="0x000000" width="1"/>
    </esri:SimpleMarkerSymbol>
    <esri:SimpleMarkerSymbol id="projCouncil" size="10" color="0xbd8a42" style="circle" alpha="{alpha_LyrProjType.value}">
    	 <esri:SimpleLineSymbol color="0x000000" width="1"/>
    </esri:SimpleMarkerSymbol>
    <esri:SimpleMarkerSymbol id="projEducation" size="10" color="0x6bbede" style="circle" alpha="{alpha_LyrProjType.value}">
    	 <esri:SimpleLineSymbol color="0x000000" width="1"/>
    </esri:SimpleMarkerSymbol>
    <esri:SimpleMarkerSymbol id="projMonitoring" size="10" color="0xff595a" style="circle" alpha="{alpha_LyrProjType.value}">
    	 <esri:SimpleLineSymbol color="0x000000" width="1"/>
	</esri:SimpleMarkerSymbol>
	<esri:SimpleMarkerSymbol id="projOutreach" size="10" color="0x37a800" style="circle" alpha="{alpha_LyrProjType.value}">
		<esri:SimpleLineSymbol color="0x000000" width="1"/>		
    </esri:SimpleMarkerSymbol>
    <esri:SimpleMarkerSymbol id="projResearch" size="10" color="0x7b55ff" style="circle" alpha="{alpha_LyrProjType.value}">
    	 <esri:SimpleLineSymbol color="0x000000" width="1"/>
    </esri:SimpleMarkerSymbol>
    <esri:SimpleMarkerSymbol id="projRestoration" size="10" color="0x4a824a" style="circle" alpha="{alpha_LyrProjType.value}">
    	 <esri:SimpleLineSymbol color="0x000000" width="1"/>
    </esri:SimpleMarkerSymbol>
    <esri:SimpleMarkerSymbol id="projTA" size="10" color="0xcee363" style="circle" alpha="{alpha_LyrProjType.value}">
    	 <esri:SimpleLineSymbol color="0x000000" width="1"/>
    </esri:SimpleMarkerSymbol>

    <esri:SimpleMarkerSymbol id="tinySym" size="6" color="0xFF0000"/>
    <esri:SimpleMarkerSymbol id="smallSym" size="12" color="0xFF0000"/>
    <esri:SimpleMarkerSymbol id="mediumSym" size="18" color="0xFF0000"/>
    <esri:SimpleMarkerSymbol id="largeSym" size="24" color="0xFF0000"/>
    	    
    <esri:SimpleMarkerSymbol id="highlightedSymbol" style="circle" color="0xFFFF33" />
   	<esri:SimpleFillSymbol id="yellowFill" color="0xFFFF33" alpha="1"/>

	<!-- Query Task: display HUC4-->
    <esri:QueryTask
        id="queryTaskHUC4"
        url="http://navigator.state.or.us/ArcGIS/rest/services/Projects/OWEB/MapServer/10"
        useAMF="true"
		executeComplete="onHUCQueryResult(event)"/>
    
    <esri:Query
        id="queryHUC"
        outFields="HU_8_NAME"
        returnGeometry="true" 
 		spatialRelationship="esriSpatialRelIntersects"        
 		outSpatialReference="{map.spatialReference}"
		maxAllowableOffset="1000"/>

    <!-- Query Task: filter by Counties -->
    <esri:QueryTask 
    	id="queryTaskCounties"
        url="http://navigator.state.or.us/ArcGIS/rest/services/BaseMaps/BaseMap_Streets_WM/MapServer/21"
		useAMF="true"
		executeComplete="countyQueryComplete(event)"/>
    
    <esri:Query id="queryCounty" returnGeometry="true" maxAllowableOffset="1000" outSpatialReference="{map.spatialReference}">
        <esri:outFields>
            <fx:String>NAME</fx:String>
        </esri:outFields>
    </esri:Query>
	
    <esri:SimpleFillSymbol id="clickSymbol" color="0xFFA500" outline="{borderSymbol}" alpha=".1"/>
    <esri:SimpleLineSymbol id="borderSymbol" color="0xFF4200" width="2" style="dash" /> 

	<!-- Query Task: filter by Senate Districts -->
	<esri:QueryTask 
		id="queryTaskSD"
		url="http://navigator.state.or.us/ArcGIS/rest/services/Projects/LegisAdmin_DistrictMap/MapServer/4"
		useAMF="true"
		executeComplete="SDQueryComplete(event)"/>
	
	<!--http://navigator.state.or.us/ArcGIS/rest/services/Framework/Admin_Bounds_WM/MapServer/5
	outFields="admin_senate_districts.District_N"-->
	
	<esri:Query
		id="querySD"
		outFields="District_N"
		returnGeometry="true" 
		spatialRelationship="esriSpatialRelIntersects"        
		outSpatialReference="{map.spatialReference}"
		maxAllowableOffset="1000"/>
	
	<!-- Query Task: filter by House Districts -->
	<esri:QueryTask 
		id="queryTaskHD"
		url="http://navigator.state.or.us/ArcGIS/rest/services/Projects/LegisAdmin_DistrictMap/MapServer/3"
		useAMF="true"
		executeComplete="HDQueryComplete(event)"/>
	
	<esri:Query id="queryHD" returnGeometry="true" maxAllowableOffset="1000" outSpatialReference="{map.spatialReference}">
		<esri:outFields>
			<fx:String>District_N</fx:String>
		</esri:outFields>
	</esri:Query>
	
  	<!-- Geo-Locate Task -->
	<esri:Locator id="locator"
				  outSpatialReference="{map.spatialReference}"
				  url="http://tasks.arcgisonline.com/ArcGIS/rest/services/Locators/TA_Address_NA_10/GeocodeServer"/>
    <esri:PictureMarkerSymbol id="addressSymbol" source="oitt_images/thumbtack.png" />

	<esri:NavigationTool id="navTool" map="{map}"/>
                
<!-- Currency formatter -->
<mx:CurrencyFormatter id="currency" precision="0" 
    rounding="nearest"
    useThousandsSeparator="true"
    alignSymbol="left"/>

</fx:Declarations>

	<!-- Begin Page layout -->
	
	<mx:Canvas id = "outerCanvas" 
   		width="100%" height="100%" 
		horizontalScrollPolicy="off"
		verticalScrollPolicy="off">
		
		<mx:VBox width="100%" height="100%">		    
			<mx:HDividedBox width="100%" height="100%" horizontalGap="5">
			
