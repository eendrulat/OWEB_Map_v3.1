								</esri:visibleLayers>								
							</esri:ArcGISDynamicMapServiceLayer>
							
							<esri:ArcGISDynamicMapServiceLayer id="layerHDs"
															   url="http://navigator.state.or.us/ArcGIS/rest/services/Framework/Admin_Bounds_WM/MapServer"
