										   icon="@Embed(source='oitt_images/forward.png')"
										   height="20" width="30"/>
								<mx:Spacer width="5"/>
								<mx:Button id="help" 
										   click="popupBox.visible=true" 
										   icon="@Embed(source='oitt_images/about.png')"  
										   toolTip="About this map"
										   height="20" width="20"/>
						    </mx:HBox>
					    </mx:HBox>	
					    
